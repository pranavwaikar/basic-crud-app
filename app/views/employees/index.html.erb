<h1>Indexing all Employees</h1>

<% if @employees.blank? %>
  <h3>There are no students in the table</h3>
<% else %>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Action</th>
    </tr>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name%></td>
        <td><%= employee.last_name%></td>
        <td><%=employee.company_name%></td>
        <td><%=employee.designation%></td>
        <td><%= link_to 'Edit' , edit_employee_path(employee) %> </td>
        <td><%= link_to 'Show' , employee_path(employee) %> </td>
        <td><%= link_to 'Destroy' , employee_path(employee) , method: :delete , data: {confirm: "Are you sure?"}%>
      </tr>
    <% end %>
  </table>
  <div>
      <%= link_to 'Create new record' , new_employee_path %> 
  </div>
<% end %>
